# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

POST	/login						controllers.HomeController.login

GET		/welcome					controllers.HomeController.welcome

POST    /token                      controllers.HomeController.mockAuthServerGetToken

POST    /customer                   controllers.HomeController.createCustomer

GET     /customers                  controllers.HomeController.getCustomers

GET     /users/:customerId          controllers.HomeController.getUsers(customerId)

POST    /user                       controllers.HomeController.createUser

GET     /roles/:customerId                      controllers.HomeController.getRoles(customerId)

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

